<%- include ("includes/header", {
   "title": post.title
}) %>

<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
    <%- include ("includes/ResponseAlert", {
        "request": request
    }) %>
</div>

<main role="main" class="container" style="margin-bottom: 50px;">
    <div class="row">
        <div class="col-md-12">
            <!-- Preview Image -->
            <% if (post.image) { %>
                <img class="img-fluid rounded" id="post-image" src="<%= mainURL + '/' + post.image %>" alt="<%= post.title %>" style="width: 100%;">
            <% } %>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 blog-main">
            <h3 class="pb-3 mb-4 font-italic border-bottom" style="margin-top: 30px;">
                <%= post.title %>
            </h3>

            <div class="blog-post">
                <p class="blog-post-meta"><%= getFullDateInFormat(post.createdAt) %></p>

                <%- post.content %>
            </div><!-- /.blog-post -->
        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-3">
                <h4 class="font-italic">Related Posts</h4>
                <% relatedPosts.forEach(function (post) { %>
                    <div class="row" style="margin-top: 30px;">
                        <div class="col-md-12">
                            <p>
                                <a href="<%= mainURL + '/Blog/' + post.slug %>">
                                    <%= post.title %>
                                </a>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="p-3">
                <h4 class="font-italic">Recent Posts</h4>
                <ul style="list-style: square; padding-left: revert;">
                    <% recentPosts.forEach(function (post) { %>
                        <li>
                            <a href="<%= mainURL + '/Blog/' + post.slug %>">
                                <%= post.title %>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->

</main><!-- /.container -->

<%- include ("includes/footer") %>